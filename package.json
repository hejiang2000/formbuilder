{
  "name": "formbuilder",
  "version": "0.0.1",
  "description": "A tool to build forms on the web",
  "scripts": {
    "build:formbuilder": "NODE_ENV=production rimraf build && webpack --config webpack.config.prod.js --optimize-minimize && cp formbuilder/index.prod.html build/index.html",
    "build:formbuilder-gh": "rimraf build && webpack --config webpack.config.github.js && cp formbuilder/index.prod.html build/index.html",
    "lint": "eslint src test",
    "publish-to-gh-pages": "npm run build:formbuilder-gh && gh-pages --dist build/",
    "publish-to-npm": "npm run dist && npm publish",
    "start": "node devServer.js",
    "tdd": "npm run test -- -w",
    "test": "SERVER_URL=http://localhost:8888/v1 NODE_ENV=test mocha --compilers js:babel/register --recursive --require ./test/setup-jsdom.js $(find test -name '*_test.js')"
  },
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {
    "antd": "^3.6.4",
    "bootstrap": "^4.1.1",
    "bootswatch": "^4.1.1",
    "btoa": "^1.1.2",
    "history": "^4.7.2",
    "isomorphic-fetch": "^2.2.1",
    "json2csv": "^4.1.5",
    "json2xls": "^0.1.2",
    "kinto-http": "^4.3.4",
    "react": "^16.4.1",
    "react-bootstrap": "^0.32.1",
    "react-clipboard.js": "^2.0.0",
    "react-dom": "^16.4.1",
    "react-drag-and-drop": "^2.0.1",
    "react-jsonschema-form": "^1.0.3",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "riek": "^1.0.2",
    "string": "^3.3.1",
    "urlencode": "^1.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-polyfill": "^6.9.1",
    "btoa": "^1.1.2",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "eslint": "^5.0.1",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "gh-pages": "^1.2.0",
    "html": "1.0.0",
    "jsdom": "^11.11.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mocha": "^5.2.0",
    "react-addons-test-utils": "^15.3.2",
    "react-transform-hmr": "^1.0.1",
    "rimraf": "^2.4.4",
    "sinon": "^6.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.14.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.6.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kinto/formbuilder.git"
  },
  "author": "Kinto team <kinto@mozilla.org>",
  "keywords": [
    "react",
    "form",
    "json-schema"
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/Kinto/formbuilder#readme"
}
